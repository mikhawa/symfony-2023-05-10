{% extends 'template.html.twig' %}

{% block title %}{{ parent() }} Page d'accueil{% endblock %}

{% block menuLinks %}
    {% include 'blog/inc/menu.html.twig' %}
{% endblock %}

{%block htitle %}Site Tuto sur Symfony 6{% endblock %}
{%block hdesc %}Pour les webdevs du CF2m{% endblock %}

{% block boutonshauts %}
    <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
        <a class="btn btn-primary btn-lg px-4 me-sm-3" href="https://github.com/mikhawa/symfony-2023-05-10" target="_blank">Projet sur github</a>
        <a class="btn btn-outline-light btn-lg px-4" href="https://www.cf2m.be/home" target="_blank">Pour le CF2m</a>
    </div>
{% endblock %}

{% block articlePerOne %}
    {% for article in articles %}
    <div class="col-lg-4 mb-5 mb-lg-0">
        <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-collection"></i></div>
        <h2 class="h4 fw-bolder">{{ article.ArticleTitle }}</h2>
        <p>{{ article.ArticleContent|u.truncate(120, '...', false) }}</p>
        <a class="text-decoration-none" href="{{ path("article", { 'slug' :  article.ArticleSlug }) }}">
            Lire la suite
            <i class="bi bi-arrow-right"></i>
        </a>
    </div>
    {% endfor %}
{% endblock %}

